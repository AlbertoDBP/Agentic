# ============================================
# DATABASE CONFIGURATION (DigitalOcean Managed)
# ============================================
# Get connection string from: DigitalOcean Dashboard → Databases → income-fortress-postgres → Connection Details
DATABASE_URL=postgresql://USERNAME:PASSWORD@HOST:25060/DATABASE?sslmode=require

# Example format:
# DATABASE_URL=postgresql://doadmin:your_password_here@private-db-host.db.ondigitalocean.com:25060/income_platform?sslmode=require

# ============================================
# REDIS/VALKEY CONFIGURATION (DigitalOcean Managed)
# ============================================
# Get connection string from: DigitalOcean Dashboard → Databases → income-fortress-valkey → Connection Details
REDIS_URL=rediss://USERNAME:PASSWORD@HOST:25061

# Example format:
# REDIS_URL=rediss://default:your_password_here@private-db-valkey.db.ondigitalocean.com:25061

# ============================================
# APPLICATION CONFIGURATION
# ============================================
LOG_LEVEL=INFO
ENVIRONMENT=production

# ============================================
# SECURITY
# ============================================
# Generate with: python3 -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=GENERATE_RANDOM_32_CHAR_STRING
JWT_SECRET=GENERATE_RANDOM_32_CHAR_STRING

# ============================================
# NAV EROSION SERVICE
# ============================================
MONTE_CARLO_SIMULATIONS=10000
NAV_MAX_WORKERS=4

# ============================================
# MARKET DATA SERVICE (Agent 01)
# ============================================
# Get free API key from: https://www.alphavantage.co/support/#api-key
MARKET_DATA_API_KEY=YOUR_ALPHA_VANTAGE_KEY_HERE
MARKET_DATA_SYNC_INTERVAL=300

# ============================================
# INCOME SCORING SERVICE (Agent 03)
# ============================================
ML_MODEL_PATH=/app/models
SCORE_CACHE_TTL=3600

# ============================================
# API RATE LIMITING
# ============================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ============================================
# MONITORING & ALERTS
# ============================================
ENABLE_METRICS=true
METRICS_PORT=9090

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_NAV_EROSION=true
ENABLE_MARKET_DATA_SYNC=true
ENABLE_INCOME_SCORING=true

# ============================================
# COST OPTIMIZATION NOTES
# ============================================
# DigitalOcean Pricing (as of 2026):
#
# Managed Services (Recommended):
# - Droplet (4 vCPU, 8GB): $48/month
# - Managed PostgreSQL Basic: $15/month
# - Managed Valkey Basic: $15/month
# - Spaces (backups): $5/month
# - Total: ~$83/month
